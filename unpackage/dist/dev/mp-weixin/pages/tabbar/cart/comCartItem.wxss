.comCartItem {
  width: 100%;
  height: 204rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
  -webkit-box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
          box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}
.comCartItem-item {
  width: 130%;
  height: 204rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comCartItem-item.ani {
  -webkit-transition: all 200ms;
  transition: all 200ms;
}
.comCartItem-item.on {
  -webkit-transform: translateX(-180rpx);
          transform: translateX(-180rpx);
}
.comCartItem-item-checkBox {
  margin: 0 20rpx;
  -webkit-align-self: center;
          align-self: center;
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #e66071;
  border-radius: 50%;
  position: relative;
}
.comCartItem-item-checkBox.on::after {
  content: '';
  width: 50%;
  height: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background: #e66071;
  border-radius: 50%;
}
.comCartItem-item-centent {
