.swiper {
  position: relative;
  width: 690rpx;
  height: 320rpx;
  margin: 0 auto;
  border-radius: 10px;
  overflow: hidden;
  -webkit-box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
          box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
}
.swiper-box {
  width: 100%;
  height: 100%;
}
.swiper-img {
  width: 100%;
  height: 100%;
}
.swiper-indicator {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: left;
  -webkit-justify-content: left;
          justify-content: left;
  position: absolute;
  left: 15rpx;
  bottom: 15rpx;
  width: 150rpx;
  height: 4rpx;
  background: #fff;
  background: rgba(255, 255, 255, 0.4);
}
.swiper-indicator-dot {
  background: #fff;
  -webkit-transition: all 300ms;
  transition: all 300ms;
  width: 0;
  height: 100%;
}
.swiper-indicator-dot.on {
  width: 33.33333%;
}

