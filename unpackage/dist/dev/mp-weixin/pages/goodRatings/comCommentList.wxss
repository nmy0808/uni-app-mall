.myVideo {
  position: fixed;
  left: 100%;
  top: 50%;
  z-index: 30;
}
.comCommentList {
  width: 690rpx;
  margin: 0 auto;
}
.comCommentList-main {
  margin-top: 30rpx;
}
.comCommentList-main-item {
  margin-top: 34rpx;
}
.comCommentList-main-item-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #282c35;
  font-size: 30rpx;
}
.comCommentList-main-item-header-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 0.3em;
}
.comCommentList-main-item-header-name-spec {
  font-size: 26rpx;
  color: #a0a0a0;
  margin-top: 5rpx;
}
.comCommentList-main-item-header-date {
  font-size: 24rpx;
  color: #a0a0a0;
  margin-left: auto;
  margin-top: 10rpx;
}
.comCommentList-main-item-box {
  width: 620rpx;
  margin-left: auto;
}
.comCommentList-main-item-box-text {
  margin-top: 15rpx;
  color: #000;
  font-size: 30rpx;
}
.comCommentList-main-item-box-vidAndImg {
  margin-top: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.comCommentList-main-item-box-vidAndImg-item {
  width: 140rpx;
  height: 140rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.comCommentList-main-item-box-vidAndImg-item-cover {
  width: 100%;
  height: 100%;
  width: 140rpx;
  height: 140rpx;
}
.comCommentList-main-item-box-vidAndImg-item-icon {
  color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  font-size: 60rpx;
  font-weight: bold;
}
.comCommentList-main-item-box-vidAndImg-item:nth-child(4n) {
  margin-right: 0;
}

